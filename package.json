{
  "name": "mdx-forge",
  "version": "0.1.6",
  "description": "Unified MDX runtime toolkit â€” compiler, browser module loader & framework component shims",
  "type": "module",
  "license": "MIT",
  "author": "Garrett Fincke",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ggfincke/mdx-forge.git"
  },
  "bugs": {
    "url": "https://github.com/ggfincke/mdx-forge/issues"
  },
  "homepage": "https://github.com/ggfincke/mdx-forge#readme",
  "keywords": [
    "mdx",
    "compiler",
    "react",
    "components",
    "docusaurus",
    "starlight",
    "nextra",
    "shiki"
  ],
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    "./compiler": {
      "import": "./dist/esm/compiler/index.js",
      "types": "./dist/types/compiler/index.d.ts"
    },
    "./compiler/plugins": {
      "import": "./dist/esm/compiler/plugins/index.js",
      "types": "./dist/types/compiler/plugins/index.d.ts"
    },
    "./compiler/transforms": {
      "import": "./dist/esm/compiler/transforms/index.js",
      "types": "./dist/types/compiler/transforms/index.d.ts"
    },
    "./browser": {
      "import": "./dist/esm/browser/index.js",
      "types": "./dist/types/browser/index.d.ts"
    },
    "./browser/registry": {
      "import": "./dist/esm/browser/registry/index.js",
      "types": "./dist/types/browser/registry/index.d.ts"
    },
    "./components": {
      "import": "./dist/esm/components/index.js",
      "types": "./dist/types/components/index.d.ts"
    },
    "./components/generic": {
      "import": "./dist/esm/components/generic/index.js",
      "types": "./dist/types/components/generic/index.d.ts"
    },
    "./components/docusaurus": {
      "import": "./dist/esm/components/docusaurus/index.js",
      "types": "./dist/types/components/docusaurus/index.d.ts"
    },
    "./components/starlight": {
      "import": "./dist/esm/components/starlight/index.js",
      "types": "./dist/types/components/starlight/index.d.ts"
    },
    "./components/nextra": {
      "import": "./dist/esm/components/nextra/index.js",
      "types": "./dist/types/components/nextra/index.d.ts"
    },
    "./components/nextjs": {
      "import": "./dist/esm/components/nextjs/index.js",
      "types": "./dist/types/components/nextjs/index.d.ts"
    },
    "./components/registry": {
      "import": "./dist/esm/components/registry/index.js",
      "types": "./dist/types/components/registry/index.d.ts"
    },
    "./components/styles/generic.css": "./dist/components/styles/generic.css",
    "./components/styles/docusaurus.css": "./dist/components/styles/docusaurus.css",
    "./components/styles/starlight.css": "./dist/components/styles/starlight.css",
    "./components/styles/nextra.css": "./dist/components/styles/nextra.css",
    "./components/styles/nextjs.css": "./dist/components/styles/nextjs.css",
    "./components/styles/tokens.css": "./dist/components/styles/tokens.css"
  },
  "peerDependencies": {
    "@mdx-js/mdx": "^3.0.0",
    "react": ">=18",
    "unified": "^11.0.0"
  },
  "peerDependenciesMeta": {
    "@mdx-js/mdx": {
      "optional": true
    },
    "unified": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "gray-matter": "^4.0.2",
    "hast-util-from-html-isomorphic": "^2.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-directive": "^4.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-mdx": "^3.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "shiki": ">=3.22.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@mdx-js/mdx": "^3.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.4",
    "eslint": "^10.0.2",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "prettier": "^3.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "build": "npm run clean && tsc -p tsconfig.build.json && node ./scripts/fix-esm-import-specifiers.mjs && node ./scripts/copy-css.mjs",
    "check:esm-specifiers": "node ./scripts/fix-esm-import-specifiers.mjs --check",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --config vitest.config.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\" \"tests/**/*.ts\"",
    "dev": "vite --config dev/vite.config.ts",
    "prepublishOnly": "npm run build && npm run check:esm-specifiers",
    "version": "node scripts/check-changelog.mjs && git add CHANGELOG.md"
  }
}
